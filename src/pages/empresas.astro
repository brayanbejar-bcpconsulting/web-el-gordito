import TendenciaDolar from "@/components/TendenciaDolar.astro";
import MainLayout from "src/layouts/MainLayout.astro";

// Schema Service para empresas
const schemaService = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Cambio de Divisas Corporativo",
  name: "Servicio de Cambio de Dólares para Empresas",
  description:
    "Tipo de cambio preferencial para empresas con RUC 20. Tasas corporativas exclusivas, facturación electrónica y atención prioritaria para operaciones de alto volumen.",
  provider: {
    "@type": "FinancialService",
    name: "El Gordito",
    url: "https://cambioselgordito.com",
    telephone: "+51981263235",
    email: "elgordito.operaciones@gmail.com.com",
  },
  areaServed: {
    "@type": "Country",
    name: "Perú",
  },
  offers: {
    "@type": "Offer",
    description:
      "Tasas preferenciales para empresas con volúmenes superiores a $5,000 USD",
    priceCurrency: "PEN",
    availability: "https://schema.org/InStock",
  },
  url: "https://cambioselgordito.com/empresas",
};
---

<MainLayout
  title="Cambia tus dólares a una tasa preferencial | El Gordito Empresas"
  description="Tipo de cambio preferencial para empresas con RUC 20. Tasas corporativas exclusivas, facturación electrónica y atención prioritaria. ¡Optimiza tus operaciones de cambio!"
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaService)} />

  <HeroEmpresas />
  <QueTeOfrecemos />
  <TendenciaDolar />
  <CasosDeUso />
  <CTABeneficios />
</MainLayout>
