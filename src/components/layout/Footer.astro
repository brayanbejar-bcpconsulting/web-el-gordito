---
import SocialMedia from "@components/ui/SocialMedia.astro";
import { APP_URLS } from "@/utils/navigation";

const currentYear = new Date().getFullYear();

// Image
import logo from "@assets/shared/logo.png";
import { Image } from "astro:assets";
---

<footer
  class="bg-primary-800 text-neutral-200 px-[5%] antialiased"
  aria-labelledby="footer-heading"
>
  <h2 id="footer-heading" class="sr-only">Pie de página</h2>

  <div
    class="mx-auto flex flex-col justify-between items-center text-center pt-10 pb-10 gap-10 xl:w-[90%] lg:flex-row lg:text-start lg:items-start"
  >
    <section
      class="w-full sm:w-[70%] lg:w-[25%] flex flex-col items-center lg:items-start gap-4 text-center lg:text-start"
    >
      <a href="/" aria-label="Ir al inicio de El Gordito">
        <Image
          loading="lazy"
          src={logo}
          alt="El Gordito - Casa de cambio digital"
          class="w-48 lg:w-64"
          width={256}
        />
      </a>
      <p
        class="inline-block rounded-full bg-secondary-300 text-primary-900 py-1 px-4 font-bold text-sm"
      >
        RUC: 20614431475
      </p>
      <p class="text-sm leading-relaxed">
        Transacciones seguras, rápidas y al mejor <strong>tipo de cambio</strong
        >. Somos la plataforma digital creada para potenciar tus ahorros
        financieros en Perú.
      </p>
    </section>

    <section class="flex flex-col gap-8">
      <div itemscope itemtype="https://schema.org/LocalBusiness">
        <h3 class="font-bold text-btn mb-3 text-secondary-300">
          Horario de atención
        </h3>
        <p class="text-sm">
          Lunes a Viernes: <br />
          <time itemprop="openingHours" datetime="Mo-Fr 08:00-20:00"
            ><strong>8:00 AM - 8:00 PM</strong></time
          >
        </p>
      </div>

      <div>
        <h3 class="font-bold mb-3 text-btn text-secondary-300">Contáctanos</h3>
        <nav aria-label="Enlaces de contacto">
          <ul class="flex flex-col gap-2 text-sm">
            <li>
              <a
                href="mailto:soporte@cambioselgordito.com"
                class="hover:text-secondary-300 transition-colors"
              >
                <strong>Correo:</strong>
              </a>
            </li>
            <li>
              <address class="not-italic">
                <strong>Dirección:</strong> Av. Cahuas 595, Huaral - Lima
              </address>
            </li>
            <li>
              <a
                href="https://wa.me/51981263235"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-secondary-300 transition-colors"
              >
                <strong>WhatsApp:</strong> +51 981 263 235
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </section>

    <section class="flex flex-col gap-8">
      <div>
        <h3
          class="font-bold mb-3 text-btn text-secondary-300 text-center lg:text-start"
        >
          Síguenos
        </h3>
        <SocialMedia />
      </div>

      <div>
        <h3 class="font-bold mb-3 text-btn text-secondary-300">
          Más información
        </h3>
        <nav aria-label="Enlaces secundarios">
          <ul class="flex flex-col gap-2 text-sm italic">
            <li>
              <a href="/ayuda" class="hover:underline">Preguntas Frecuentes</a>
            </li>
            <li>
              <a
                href="/tipo-de-cambio"
                class="hover:underline font-bold text-secondary-400"
                >Precio del Dólar Hoy</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </section>

    <section class="flex flex-col gap-8 items-center lg:items-start">
      <div>
        <h3
          class="font-bold mb-3 text-btn text-secondary-300 text-center lg:text-start"
        >
          Legal
        </h3>
        <nav aria-label="Enlaces legales">
          <ul class="flex flex-col gap-2 text-sm text-center lg:text-start">
            <li>
              <a href="/terminos-condiciones" class="hover:underline"
                >Términos y Condiciones</a
              >
            </li>
            <li>
              <a href="/politicas-privacidad" class="hover:underline"
                >Políticas de Privacidad</a
              >
            </li>
          </ul>
        </nav>
      </div>
      <a
        href="/ayuda/#form-reclamation"
        aria-label="Acceder al libro de reclamaciones virtual"
      >
        <img
          loading="lazy"
          src="/libro-reclamaciones.webp"
          alt="Libro de Reclamaciones Virtual"
          class="w-40 hover:opacity-80 transition-opacity"
          width="160"
          height="auto"
        />
      </a>
    </section>
  </div>

  <section
    class="w-full lg:w-[80%] border-t border-primary-400/30 mx-auto py-6 mt-4"
  >
    <p class="text-xs font-light text-neutral-300 text-center">
      Copyright © {currentYear}
      <strong>El Gordito</strong> | RUC: 20614431475. Todos los derechos reservados.
      <br class="sm:hidden" />
      Desarrollado por <a
        href="https://bcpconsulting.pe/"
        class="hover:text-white">BCP Consulting E.I.R.L.</a
      >
    </p>
  </section>
</footer>
