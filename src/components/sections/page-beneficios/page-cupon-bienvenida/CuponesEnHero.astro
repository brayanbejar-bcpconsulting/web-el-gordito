---
import Button from "@components/ui/Button.astro"
import { Image } from "astro:assets";
import { APP_URLS } from "@/utils/navigation";

// Imágenes
import cuponBievenida from "@assets/beneficios/bienvenido-cupon.webp"
---

<article
  aria-labelledby="titulo-cupon-bienvenida"
  class="relative h-full bg-linear-to-br from-white via-secondary-50 to-secondary-100 p-6 lg:p-8 rounded-3xl shadow-xl border border-secondary-200/50 overflow-hidden"
>
  <!-- Orb decorativo -->
  <div class="absolute -top-20 -right-20 w-40 h-40 bg-secondary-400/20 rounded-full blur-2xl" aria-hidden="true"></div>
  <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-primary-400/10 rounded-full blur-2xl" aria-hidden="true"></div>

  <!-- Badge superior -->
  <div class="relative z-10 flex justify-center mb-4">
    <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-linear-to-r from-secondary-400 to-secondary-500 text-white text-xs font-bold shadow-md">
      <svg class="size-4" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      OFERTA EXCLUSIVA
    </div>
  </div>

  <!-- Contenido -->
  <header class="relative z-10 space-y-3 text-center">
    <h2
      id="titulo-cupon-bienvenida"
      class="text-2xl lg:text-3xl font-bold text-primary-700 tracking-tight leading-tight"
    >
      ¡Aprovecha tu cupón de Bienvenida!
    </h2>

    <p class="text-sm lg:text-base leading-relaxed text-neutral-700">
      Regístrate hoy y recibe un <strong class="text-primary-700">cupón de bienvenida</strong> con una
      tasa preferencial exclusiva.
    </p>
  </header>

  <!-- Imagen del cupón -->
  <div class="relative z-10 my-6 flex justify-center">
    <div class="relative">
      <!-- Glow effect detrás de la imagen (solo desktop) -->
      <div class="absolute inset-0 bg-secondary-400/30 rounded-2xl blur-xl hidden lg:block" aria-hidden="true"></div>
      
      <Image
        src={cuponBievenida}
        alt="Cupón de bienvenida para mejorar el tipo de cambio en la primera operación"
        loading="eager"
        class="relative z-10 max-w-full w-56 lg:w-64 drop-shadow-2xl hover:scale-105 transition-transform duration-300"
      />
    </div>
  </div>

  <!-- Lista de beneficios -->
  <div class="relative z-10 mb-6 space-y-2">
    <div class="flex items-center gap-2 text-sm text-neutral-700">
      <svg class="size-5 text-success-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
      </svg>
      <span>Tasa preferencial exclusiva</span>
    </div>
    <div class="flex items-center gap-2 text-sm text-neutral-700">
      <svg class="size-5 text-success-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
      </svg>
      <span>Válido en tu primera operación</span>
    </div>
    <div class="flex items-center gap-2 text-sm text-neutral-700">
      <svg class="size-5 text-success-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
      </svg>
      <span>Sin monto mínimo requerido</span>
    </div>
  </div>

  <!-- CTA -->
  <div class="relative z-10">
    <Button
      variant="primary"
      size="lg"
      href={APP_URLS.register}
      class="w-full group shadow-lg shadow-primary-500/20"
    >
      <svg class="size-5 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Obtener cupón ahora
      <svg class="size-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
      </svg>
    </Button>
  </div>

  <!-- Urgencia sutil -->
  <p class="relative z-10 mt-4 text-xs text-center text-neutral-500 font-medium">
    <svg class="inline size-3.5 mr-1 text-secondary-500" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
    </svg>
    Oferta válida para nuevos usuarios
  </p>
</article>

<style>
  /* Optimización: sin animaciones pesadas */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition-duration: 0.01ms !important;
    }
  }
</style>