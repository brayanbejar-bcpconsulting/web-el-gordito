---
import CTABeneficios from "@/components/layout/CTABeneficios.astro";
import CasosDeUso from "@/components/sections/page-empresas/CasosDeUso.astro";
import HeroEmpresas from "@/components/sections/page-empresas/HeroEmpresas.astro";
