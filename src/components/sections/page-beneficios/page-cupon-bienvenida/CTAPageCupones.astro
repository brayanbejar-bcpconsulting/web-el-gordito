---
import Icon from "@/components/ui/Icon.astro";
import Button from "@components/ui/Button.astro";
import { APP_URLS } from "@/utils/navigation";
---

<section
  aria-labelledby="cta-final-titulo"
  class="relative py-20 lg:py-28 px-4"
>
  <!-- Fondo decorativo SIMPLIFICADO (sin animaciones en mobile) -->
  <div class="absolute inset-0 -z-10 hidden lg:block" aria-hidden="true">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary-400/20 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-6xl mx-auto">
    <!-- Card principal OPTIMIZADO -->
    <div
      class="
        relative overflow-hidden
        rounded-3xl lg:rounded-[2.5rem]
        bg-linear-to-br from-primary-600 via-primary-700 to-primary-800
        shadow-2xl
        px-6 sm:px-10 lg:px-16 py-12 lg:py-20
        text-white
      "
    >
      <!-- Orbs decorativos ESTÁTICOS (sin blur en mobile) -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-secondary-400/15 rounded-full lg:blur-3xl translate-x-1/3 -translate-y-1/3" aria-hidden="true"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-primary-400/15 rounded-full lg:blur-3xl -translate-x-1/3 translate-y-1/3" aria-hidden="true"></div>

      <div class="relative z-10 flex flex-col items-center max-w-4xl mx-auto space-y-8 lg:space-y-10">
        <!-- Badge superior SIN animación bounce -->
        <div class="flex justify-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 border border-white/20">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-secondary-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-secondary-400"></span>
            </span>
            <span class="text-sm font-semibold text-white">¡Oferta especial por tiempo limitado!</span>
          </div>
        </div>

        <!-- Título CON lineare pero SIN animación -->
        <div class="space-y-4 text-center">
          <h2
            id="cta-final-titulo"
            class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight leading-tight"
          >
            Empieza a cambiar dólares con 
            <span class="inline-block bg-linear-to-r from-secondary-100 to-secondary-300 bg-clip-text text-transparent">
              una mejor tasa
            </span>
            hoy
          </h2>

          <p class="text-base sm:text-lg lg:text-xl text-primary-50/90 max-w-2xl mx-auto leading-relaxed font-medium">
            Regístrate ahora y accede a una tasa preferencial desde tu primera
            operación. <span class="text-white font-semibold">Rápido, seguro y 100% online.</span>
          </p>
        </div>

        <!-- Beneficios SIN backdrop-blur -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 lg:gap-6 pt-4">
          <div class="flex items-center gap-3 justify-center sm:justify-start bg-white/5 rounded-2xl p-4 border border-white/10">
            <div class="shrink-0 w-10 h-10 rounded-full bg-success-500/20 flex items-center justify-center">
              <Icon name="check-circle" class="size-6 text-success-400" />
            </div>
            <span class="text-sm font-semibold">Registro en 2 minutos</span>
          </div>

          <div class="flex items-center gap-3 justify-center sm:justify-start bg-white/5 rounded-2xl p-4 border border-white/10">
            <div class="shrink-0 w-10 h-10 rounded-full bg-success-500/20 flex items-center justify-center">
              <Icon name="shield-check" class="size-6 text-success-400" />
            </div>
            <span class="text-sm font-semibold">100% seguro y confiable</span>
          </div>

          <div class="flex items-center gap-3 justify-center sm:justify-start bg-white/5 rounded-2xl p-4 border border-white/10">
            <div class="shrink-0 w-10 h-10 rounded-full bg-success-500/20 flex items-center justify-center">
              <Icon name="currency-dollar" class="size-6 text-success-400" />
            </div>
            <span class="text-sm font-semibold">Transferencias rápidas</span>
          </div>
        </div>

        <!-- CTAs optimizados -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-6">
          <Button
            variant="secondary"
            size="lg"
            href={APP_URLS.register}
            class="w-full sm:w-auto group"
          >
            <Icon name="user" class="group-hover:rotate-12 transition-transform duration-300"/>
            Crear cuenta
            <Icon name="arrow-right" class="group-hover:translate-x-1 transition-transform duration-300"/>
          </Button>

          <Button
            variant="outline"
            size="lg"
            href={APP_URLS.login}
            class="w-full sm:w-auto border-2 border-white/80 hover:bg-white/10 hover:border-white"
          >
            <Icon name="login"/>
            Ya tengo cuenta
          </Button>
        </div>

        <!-- Trust signals simplificados -->
        <div class="pt-6 space-y-4">
          <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2 text-sm text-primary-100/90">
            <span class="flex items-center gap-2">
              <Icon name="shield-check" class="size-4 text-success-400" />
              Plataforma segura
            </span>
            <span class="hidden sm:inline text-primary-300/50">•</span>
            <span class="flex items-center gap-2">
              <Icon name="currency-dollar" class="size-4 text-success-400" />
              Sin costos ocultos
            </span>
            <span class="hidden sm:inline text-primary-300/50">•</span>
            <span class="flex items-center gap-2">
              <Icon name="check-circle" class="size-4 text-success-400" />
              Transferencias confiables
            </span>
          </div>

          <!-- Social proof -->
          <div class="flex items-center justify-center gap-2 pt-2">
            <div class="flex -space-x-2">
              {[1, 2, 3, 4].map((i) => (
                <div class="w-8 h-8 rounded-full bg-linear-to-br from-primary-400 to-primary-600 border-2 border-white/20 flex items-center justify-center text-xs font-bold">
                  {i === 4 ? '+' : ''}
                </div>
              ))}
            </div>
            <span class="text-sm text-primary-100/90 font-medium">
              +1,500 usuarios confían en nosotros
            </span>
          </div>
        </div>

        <!-- Garantía final SIN backdrop-blur -->
        <div class="inline-flex items-center gap-2 mx-auto px-6 py-3 rounded-full bg-white/5 border border-white/10 text-center">
          <Icon name="shield-circle-check" class="size-8 text-success-400" />
          <span class="text-xs sm:text-sm font-medium">
            Tus datos están protegidos con encriptación de nivel bancario
          </span>
        </div>
      </div>
    </div>

    <!-- Testimonial flotante -->
    <div class="mt-8 max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl p-6 border border-neutral-200">
        <div class="flex items-start gap-4">
          <div class="shrink-0 w-12 h-12 rounded-full bg-linear-to-br from-primary-500 to-primary-600 flex items-center justify-center text-white font-bold text-lg">
            M
          </div>
          <div class="flex-1">
            <div class="flex items-center gap-1 mb-2">
              {[1, 2, 3, 4, 5].map(() => (
                <Icon name="star" class="size-4 fill-secondary-400 text-secondary-400" />
              ))}
            </div>
            <p class="text-neutral-700 text-sm italic mb-2">
              "La mejor plataforma para cambiar dólares. Rápido, seguro y con excelente atención al cliente."
            </p>
            <p class="text-xs text-neutral-500 font-semibold">
              María G. - Cliente verificada
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Solo 1 animación esencial: el ping del badge */
  @keyframes ping {
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  .animate-ping {
    animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  /* Optimización: usar will-change solo cuando sea necesario */
  .group:hover .group-hover\:rotate-12,
  .group:hover .group-hover\:translate-x-1 {
    will-change: transform;
  }

  /* Mejora en dispositivos de baja potencia */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>