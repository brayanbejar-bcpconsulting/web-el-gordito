</div>

<script>
  const desktopBanner = document.getElementById('desktop-banner');
  const floatingGroup = document.getElementById('floating-icon-group');
  const closeBtn = document.getElementById('close-banner');
  const popupMobile = document.getElementById('popup-text-mobile');

  const minimizeToButton = () => {
    if (desktopBanner && desktopBanner.style.display !== 'none') {
      desktopBanner.style.opacity = '0';
      desktopBanner.style.transform = 'translateX(20px) scale(0.95)';
      
      setTimeout(() => {
        desktopBanner.style.display = 'none';
        floatingGroup?.classList.remove('lg:hidden');
        floatingGroup?.classList.add('animate-slide-in-bottom');
      }, 400);
    }
  };

  closeBtn?.addEventListener('click', (e) => {
    e.preventDefault();
    minimizeToButton();
  });

  setTimeout(minimizeToButton, 12000);

  setInterval(() => {
    if (window.innerWidth < 1024) {
      popupMobile?.classList.toggle('opacity-0');
    }
  }, 5000);
</script>

<style>
  .animate-slide-in {
    animation: slideIn 0.8s cubic-bezier(0.17, 0.67, 0.83, 0.67) both;
  }
  .animate-slide-in-bottom {
    animation: slideInBottom 0.5s ease-out both;
  }
  .animate-float {
    animation: floating 3s ease-in-out infinite;
  }
  @keyframes slideIn {
    0% { opacity: 0; transform: translateX(100px); }
    100% { opacity: 1; transform: translateX(0); }
  }
  @keyframes slideInBottom {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  @keyframes floating {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }
  @media (max-height: 500px) {
    #negotiation-wrapper { display: none; }
  }
</style>