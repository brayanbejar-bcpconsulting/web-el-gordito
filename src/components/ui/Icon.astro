---
interface Props {
  name: string;
  id?: string;
  size?: number | string;
  class?: string;
}

const { name, id, size = 24, class: className } = Astro.props;

// Esto a√±ade un timestamp o una cadena aleatoria al final de la URL
const version = Date.now(); 
---

<svg id={id} width={size} height={size} class={className} aria-hidden="true">
  <use href={`/icon-sprite.svg?v=${version}#${name}`}></use>
</svg>